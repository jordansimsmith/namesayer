<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="namesayer.controller.ViewController">
    <Label alignment="CENTER" text="View Existing Attempts" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font size="25.0"/>
        </font>
    </Label>
    <ListView fx:id="attemptsList" prefHeight="400.0" prefWidth="656.0" GridPane.halignment="CENTER"
              GridPane.rowIndex="3"/>

    <Slider fx:id="volumeSlider" maxWidth="200" showTickLabels="true" value="100.0" GridPane.halignment="CENTER"
            GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </Slider>

    <HBox GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
    </HBox>
    <Button fx:id="playBtn" onAction="#handlePlay" prefHeight="50" prefWidth="200" text="Play"
            GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <font>
            <Font size="20.0"/>
        </font>
    </Button>
    <Button fx:id="closeBtn" onAction="#handleClose" prefHeight="50" prefWidth="200" text="Close"
            GridPane.halignment="CENTER" GridPane.rowIndex="6">
        <font>
            <Font size="20.0"/>
        </font>
        <GridPane.margin>
            <Insets top="30.0"/>
        </GridPane.margin>
    </Button>


</GridPane>
