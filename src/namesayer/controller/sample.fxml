<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="CENTER" hgap="10" prefHeight="720.0" prefWidth="1280.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="namesayer.controller.Controller">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>

    <ListView fx:id="namesList" prefHeight="445.0" prefWidth="280.0" GridPane.rowIndex="1" GridPane.rowSpan="3">
        <effect>
            <Blend/>
        </effect>
    </ListView>

    <CheckBox fx:id="shuffleBox" mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="Shuffle"
              GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <font>
            <Font size="15.0"/>
        </font>
    </CheckBox>


    <ListView fx:id="selectedList" prefHeight="420.0" prefWidth="400.0" GridPane.columnIndex="3" GridPane.rowIndex="1"
              GridPane.rowSpan="2"/>

    <Button contentDisplay="CENTER" maxHeight="1.7976931348623157E308" onAction="#playAction" text="Playback"
            textAlignment="CENTER" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
    <Label text="Names to Practise" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Label alignment="CENTER" text="Database" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <Button alignment="CENTER" onAction="#handleAdd" prefHeight="36.0" prefWidth="86.0" text="Add Name"
            GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
    <Label fx:id="nameBuilder" prefHeight="94.0" prefWidth="400.0" textAlignment="CENTER" GridPane.columnIndex="2"
           GridPane.rowIndex="2">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>

    <Button alignment="CENTER" onAction="#handleHome" prefHeight="36.0" prefWidth="86.0" text="Return"
            GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>


</GridPane>
