<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="mediaPlayer" alignment="CENTER" hgap="20" prefHeight="720.0" prefWidth="1280.0" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>


    <Text fx:id="infoPlay" text="Name" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER"
          GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <font>
            <Font size="50.0"/>
        </font>
        <GridPane.margin>
            <Insets top="30.0"/>
        </GridPane.margin>
    </Text>
    <MediaView fx:id="mediaViewer" fitHeight="180" fitWidth="650" GridPane.columnIndex="1" GridPane.rowIndex="1"
               GridPane.valignment="BOTTOM"/>

    <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <Button onAction="#handlePrevious" prefHeight="50.0" prefWidth="105.0" text="Previous">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleBadQuality" prefHeight="50.0" prefWidth="168.0"
                text="Bad Recording">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>

        <Button onAction="#handleNext" prefHeight="50.0" prefWidth="118.0" text="Next">
            <HBox.margin>
                <Insets left="10.0"/>
            </HBox.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
    </HBox>
    <ListView fx:id="playList" prefHeight="450.0" prefWidth="340.0" GridPane.rowIndex="1"/>

    <Button mnemonicParsing="false" onAction="#handleMicTest" prefHeight="49.0" prefWidth="117.0" text="Test Mic"
            textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4">
        <font>
            <Font size="18.0"/>
        </font>
    </Button>

    <CheckBox fx:id="handleMode" mnemonicParsing="false" prefHeight="50.0" prefWidth="176.0" text="Listen only"
              textOverrun="CLIP" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <font>
            <Font size="18.0"/>
        </font>
    </CheckBox>
    <Button onAction="#handleHome" prefHeight="50.0" prefWidth="102.0" text="Return" GridPane.columnIndex="1"
            GridPane.halignment="RIGHT" GridPane.rowIndex="4">
        <font>
            <Font size="18.0"/>
        </font>
    </Button>


    <Button onAction="#handlePlay" prefHeight="50.0" prefWidth="89.0" text="Play" GridPane.columnIndex="1"
            GridPane.halignment="CENTER" GridPane.rowIndex="4">
        <font>
            <Font size="18.0"/>
        </font>
    </Button>


    <ProgressBar fx:id="recordPB" prefHeight="20.0" prefWidth="628.0" progress="0.0" visible="false"
                 GridPane.columnIndex="1" GridPane.rowIndex="2"/>


</GridPane>
