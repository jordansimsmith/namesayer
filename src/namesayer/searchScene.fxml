<GridPane alignment="CENTER" hgap="10" prefHeight="720.0" prefWidth="1280.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="namesayer.SearchController">
    <Label text="Manual Name Search" GridPane.rowIndex="0">
        <font>
            <Font size="64.0" />
        </font>
        <GridPane.margin>
            <Insets bottom="100.0" />
        </GridPane.margin>
    </Label>

    <TextField fx:id="userInput" maxWidth="600" prefHeight="51.0" prefWidth="600.0" GridPane.halignment="CENTER" GridPane.rowIndex="1">

        <font>
            <Font size="18.0" />
        </font>
