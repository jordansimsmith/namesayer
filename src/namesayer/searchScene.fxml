    <Label fx:id="searchResult" prefHeight="100" GridPane.halignment="CENTER" GridPane.rowIndex="2">
      <font>
         <Font size="24.0" />
      </font></Label>

    <Button onAction="#handleSearch" prefHeight="50" prefWidth="400" text="Search" GridPane.halignment="CENTER" GridPane.rowIndex="3">
        <font>
            <Font size="24.0" />
        </font>
    </Button>
    <Button onAction="#handlePrac" prefHeight="50" prefWidth="400" text="Practise" GridPane.halignment="CENTER" GridPane.rowIndex="4">
        <font>
            <Font size="24.0" />
        </font>
    </Button>
    <Button onAction="#handleHome" prefHeight="50" prefWidth="400" text="Return" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <font>
            <Font size="24.0" />
        </font>
